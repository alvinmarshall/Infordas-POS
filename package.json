{
  "name": "infordas-pos",
  "description": "Infordas POS REST API",
  "version": "1.0.0-alpha",
  "main": "./dist/src/index.js",
  "bin": "./dist/src/index.js",
  "author": "Kelvin Birikorang",
  "license": "Apache-2.0",
  "scripts": {
    "remove": "rimraf ./dist",
    "build": "rimraf ./dist && tsc",
    "start": "NODE_ENV=development&& node ./dist/src/index.js",
    "serve": "npm run build&& node ./dist/src/index.js ",
    "start:dev": "set NODE_ENV=development&& nodemon",
    "dev": "set NODE_ENV=development&& ts-node ./src/index.ts",
    "test:unit": "nyc --reporter=html --reporters=text mocha --opts ./unit_test/mocha.opts -r ts-node/register --exit",
    "test:integration": "set NODE_ENV=test&& nyc --reporter=html --reporters=text mocha --opts ./integration_test/mocha.opts -r ts-node/register --exit",
    "tests": "npm run test:unit&& npm run test:integration"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.2.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6-alpha.6",
    "http-errors": "^1.7.3",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mysql": "^2.17.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.5",
    "@types/config": "^0.0.36",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-fileupload": "^1.1.0",
    "@types/http-errors": "^1.6.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.147",
    "@types/mocha": "^5.2.7",
    "@types/mysql": "^2.15.8",
    "@types/node": "^12.12.7",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/sqlite3": "^3.1.6",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.0",
    "sqlite3": "^4.1.1",
    "supertest": "^4.0.2",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.3"
  },
  "pkg": {
    "assets": [
      "config",
      "./node_modules/config/**/*.*"
    ]
  }
}
